{
  "name": "@katasumi/core",
  "version": "1.0.0",
  "description": "Core types and database adapters for Katasumi",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "prisma generate && tsc --build && npm run copy-prisma",
    "copy-prisma": "mkdir -p dist/generated && cp -r src/generated/prisma dist/generated/",
    "dev": "tsc --build --watch",
    "prisma:generate": "prisma generate",
    "migrate": "node dist/migrate.js",
    "migrate:rollback": "node dist/migrate.js rollback",
    "migrate:status": "node dist/migrate.js status",
    "seed": "node dist/seed.js",
    "verify": "node dist/verify-seed.js",
    "build-db": "node dist/build-core-db.js"
  },
  "keywords": [
    "shortcuts",
    "keyboard",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@prisma/adapter-libsql": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "dotenv": "^17.2.3",
    "prisma": "^7.3.0"
  }
}
