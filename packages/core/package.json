{
  "name": "@katasumi/core",
  "version": "1.0.0",
  "description": "Core types and database adapters for Katasumi",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "prisma generate && prisma generate --schema=prisma/schema.postgres.prisma && tsc --build && npm run copy-prisma",
    "copy-prisma": "mkdir -p dist/generated && cp -r src/generated/prisma dist/generated/ && cp -r src/generated/prisma-postgres dist/generated/",
    "dev": "tsc --build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "migrate": "node dist/migrate.js",
    "migrate:rollback": "node dist/migrate.js rollback",
    "migrate:status": "node dist/migrate.js status",
    "seed": "node dist/seed.js",
    "verify": "node dist/verify-seed.js",
    "build-db": "node dist/build-core-db.js",
    "verify-search": "node dist/verify-search.js",
    "test-search": "node dist/test-search-simple.js",
    "verify-db-002": "node dist/verify-db-002.js",
    "docs": "typedoc --options typedoc.json"
  },
  "keywords": [
    "shortcuts",
    "keyboard",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "typedoc": "^0.28.16",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@prisma/adapter-libsql": "^7.3.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/pg": "^8.16.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "pg": "^8.17.2",
    "prisma": "^7.3.0"
  }
}
