{
  "name": "@katasumi/tui",
  "version": "1.0.0",
  "type": "module",
  "description": "Terminal UI for Katasumi keyboard shortcut search",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "katasumi": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "npm run build && node dist/cli.js",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test-adapter": "node dist/test-adapter.js",
    "verify": "node dist/verify-db-001.js",
    "verify-tui-001": "npm run build && node dist/verify-tui-001.js"
  },
  "keywords": [
    "shortcuts",
    "keyboard",
    "productivity",
    "tui",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@katasumi/core": "file:../core",
    "ink": "^4.4.1",
    "react": "^18.3.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.3.27",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
