{
  "name": "katasumi",
  "version": "1.0.0",
  "description": "Keyboard shortcut search engine",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "setup:tui": "npm run build && npm run migrate && npm run seed && npm run build-db",
    "start:tui": "npm start --workspace=@katasumi/tui",
    "start:web": "npm start --workspace=@katasumi/web",
    "migrate": "npm run migrate --workspace=@katasumi/core",
    "migrate:rollback": "npm run migrate:rollback --workspace=@katasumi/core",
    "migrate:status": "npm run migrate:status --workspace=@katasumi/core",
    "seed": "npm run seed --workspace=@katasumi/core",
    "build-db": "npm run build-db --workspace=@katasumi/core"
  },
  "keywords": ["shortcuts", "keyboard", "productivity"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "turbo": "^1.11.3"
  }
}
