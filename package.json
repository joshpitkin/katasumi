{
  "name": "katasumi",
  "version": "1.0.0",
  "description": "Keyboard shortcut search engine",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "setup:tui": "pnpm run build && pnpm run migrate && pnpm run seed && pnpm run build-db",
    "start:tui": "pnpm --filter=@katasumi/tui run start",
    "start:web": "pnpm --filter=@katasumi/web run start",
    "migrate": "pnpm --filter=@katasumi/core run migrate",
    "migrate:rollback": "pnpm --filter=@katasumi/core run migrate:rollback",
    "migrate:status": "pnpm --filter=@katasumi/core run migrate:status",
    "seed": "pnpm --filter=@katasumi/core run seed",
    "build-db": "pnpm --filter=@katasumi/core run build-db"
  },
  "keywords": ["shortcuts", "keyboard", "productivity"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "turbo": "^1.11.3"
  }
}
